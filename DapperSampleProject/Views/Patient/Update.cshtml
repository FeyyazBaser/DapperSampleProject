@{
    ViewData["Title"] = "Save";
}
@model Patient
<h1>Update Patient</h1>

<div class="row">

    <div class=col-md-6>

        <form asp-action="Update" method="post" asp-controller="Patient">

            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Surname"></label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdentityNumber"></label>
                <input asp-for="IdentityNumber" class="form-control" />
                <span asp-validation-for="IdentityNumber" class="text-danger"></span>
            </div>

             <div class="form-group">
                <label asp-for="Disease"></label>
                <input asp-for="Disease" class="form-control" />
                <span asp-validation-for="Disease" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Doctor</label>
                <select asp-for="DoctorId" asp-items="ViewBag.doctors" class="form-control"></select>

            </div>

            <div class="form-group">

                <input type="submit" value="Save" class="btn-primary rounded-2 mt-2" />

            </div>
        </form>



    </div>


</div>

