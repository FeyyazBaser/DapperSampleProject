@{
    ViewData["Title"] = "Index";
}
@model List<Patient>
<a class="btn btn-success" asp-controller="Patient" asp-action="Save">Save Patient</a>
<table class="table table-striped">
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>Surname</td>
            <td>IdentityNumber</td>
            <td>Disease</td>
            <td>Doctor</td>
            <td>CreatedDate</td>
            <td>Actions</td>

        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.IdentityNumber</td>
                <td>@item.Disease</td>
                <td>@item.Doctor.Name @item.Doctor.Surname</td>
                <td>@item.CreatedDate</td>
                <td>
                    <a class="btn btn-warning" asp-controller="Patient" asp-action="Update" asp-route-id="@item.Id">Update</a>
                    <a class="btn btn-danger" asp-controller="Patient" asp-action="Remove" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }

    </tbody>



</table>