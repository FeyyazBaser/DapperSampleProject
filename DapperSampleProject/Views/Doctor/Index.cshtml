@{
    ViewData["Title"] = "Index";
}
@model List<Doctor>
<a class="btn btn-success" asp-controller="Doctor" asp-action="Save">Save Doctor</a>
<table class="table table-striped">
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>Surname</td>
            <td>Department</td>
            <td>Phone Number</td>
            <td>Email</td>       
            <td>CreatedDate</td>
            <td>Actions</td>

        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.Department</td>
                <td>@item.PhoneNumber</td>
                <td>@item.Email</td>
                <td>@item.CreatedDate</td>
                <td>
                    <a class="btn btn-warning" asp-controller="Doctor" asp-action="Update" asp-route-id="@item.Id">Update</a>
                    <a class="btn btn-danger" asp-controller="Doctor" asp-action="Remove" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }

    </tbody>



</table>